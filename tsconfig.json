{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "declarationDir": "./types",
    "sourceMap": true,
    "lib": ["es2017", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*"],
  "exclude": ["./dist", "./node_modules"]
}
